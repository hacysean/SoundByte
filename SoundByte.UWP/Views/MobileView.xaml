<Page
    x:Class="SoundByte.UWP.Views.MobileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    RequestedTheme="Dark"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.452,1.962" StartPoint="1.164,-0.352">
                <GradientStop Color="#6f4282" Offset="0"/>
                <GradientStop Color="#372141" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="SoundByte" FontWeight="SemiBold" FontSize="52"  TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock Text="for Windows Phone" FontWeight="Thin" FontSize="32" Opacity="0.3" Margin="0,0,0,0" TextAlignment="Center" HorizontalAlignment="Center" />

            <TextBlock Text="This version of SoundByte does not support Windows Phone. Instead download 'SoundByte for Mobile' from the Microsoft Store."  FontSize="18"  Margin="5,35,5,0"  HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  />

            <Button HorizontalAlignment="Stretch" Padding="0,15" FontSize="18" Content="Download" Margin="5,30,5,0" Click="DownloadSoundByteMobile" />

        </StackPanel>
    </Grid>
</Page>
