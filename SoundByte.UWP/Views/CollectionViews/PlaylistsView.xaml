<Page
    x:Class="SoundByte.UWP.Views.CollectionViews.PlaylistsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:SoundByte.UWP.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations">

    <ScrollViewer>
        <StackPanel>
            <!-- SoundByte Header -->
            <Grid Margin="0,20,0,10" Padding="{ThemeResource PagePadding}">
                <TextBlock Text="SoundByte" 
                           Style="{StaticResource SubTitleStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />
                <controls:AppButton HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"                     
                                    Label="View All" 
                                    IsExtended="True"
                                    Glyph="&#xE8A9;"/>
            </Grid>

            <Grid Height="260" Padding="{ThemeResource PagePadding}" Margin="-10,0,0,0">
                <controls:InfoPane VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                         Visibility="Collapsed" Canvas.ZIndex="50"  />
                <GridView Height="280"
                              ScrollViewer.HorizontalScrollMode="Disabled"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              ItemTemplate="{StaticResource TrackItem}"
                              SelectionMode="None"
                              ItemContainerStyle="{StaticResource MainGridViewItem}"
                              IsSwipeEnabled="False"
                              IsItemClickEnabled="True"
                              IsMultiSelectCheckBoxEnabled="False"       
                              animations:ReorderGridAnimation.Duration="150"
                              HorizontalAlignment="Stretch">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Horizontal" CacheLength="1.0" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>

            <!-- SoundCloud Header -->
            <Grid Margin="0,20,0,10" Padding="{ThemeResource PagePadding}">
                <TextBlock Text="SoundCloud" 
                           Style="{StaticResource SubTitleStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />
                <controls:AppButton HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"                     
                                    Label="View All" 
                                    Click="{x:Bind ViewAllSoundCloud}"
                                    IsExtended="True"
                                    Glyph="&#xE8A9;"/>
            </Grid>

            <Grid Height="260" Padding="{ThemeResource PagePadding}" Margin="-10,0,0,0">
                <controls:InfoPane VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                   Visibility="Collapsed" Canvas.ZIndex="50" 
                                   Header="{x:Bind PlaylistModel.ErrorHeader, Mode=OneWay}"
                                   Text="{x:Bind PlaylistModel.ErrorDescription, Mode=OneWay}"
                                   IsLoading="{x:Bind PlaylistModel.IsLoading, Mode=OneWay}"
                                   IsError="{x:Bind PlaylistModel.IsError, Mode=OneWay}"/>
                <GridView Height="280"
                          ItemClick="{x:Bind NavigatePlaylist}"
                          ItemsSource="{x:Bind PlaylistModel}"
                          ScrollViewer.HorizontalScrollMode="Disabled"
                          ScrollViewer.VerticalScrollMode="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ItemTemplate="{StaticResource PlaylistItem}"
                          SelectionMode="None"
                          ItemContainerStyle="{StaticResource MainGridViewItem}"
                          IsSwipeEnabled="False"
                          IsItemClickEnabled="True"
                          IsMultiSelectCheckBoxEnabled="False"       
                          animations:ReorderGridAnimation.Duration="150"
                          HorizontalAlignment="Stretch">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Horizontal" CacheLength="1.0" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
